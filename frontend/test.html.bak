<html>
    <head>
        <link rel="stylesheet" type="text/css" href="slick/slick.css"/>
        <link rel="stylesheet" type="text/css" href="slick/slick-theme.css"/>
        <script type="text/javascript" src="http://code.jquery.com/jquery-1.11.3.js"></script>
        <script type="text/javascript" src="http://code.jquery.com/jquery-migrate-1.2.1.js"></script>
        <script type="text/javascript" src="slick/slick.min.js"></script>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    </head>
    
    <style>

    .slick-slide {
        opacity: .75;
    }
    .slick-center {
        opacity: 1;
    }
    .seamless-slide {
        background-color:white;
        text-align: center;
        /*border: 2px solid red;*/
        margin: 0 15px 0 15px;
        width: 324px;
    }
    .seamless-slider {
        height:475px;
        /*border: 2px solid black;*/
    }
    .seamless-text { 
        /*border: 2px solid blue;*/
        font-size: 20pt;
        position: relative;
        top: 45%;
     }
    </style>
    <body style="background-color:#3498db">

            <div class="container" id="McContainer" style="width:600px; align:center; margin-left:auto;margin-right:auto">
                <div class="seamless-slider" id="main-slider">
                        <div class="seamless-slide" id="main-slide">
                            <span class="seamless-text" >HELLOTacos</span>
                        </div>
                        <div class="seamless-slide">
                            <span class="seamless-text">Random Chinese</span>
                        </div>
                        <div class="seamless-slide">
                            <span class="seamless-text">Panera</span>
                        </div>
                        <div class="seamless-slide">
                            <span class="seamless-text">STUFFS</span>
                        </div>
                </div>
            </div>

        
        <script type="text/javascript">
            $(document).ready(function() {
                $(document).on("keypress", function (e) {
                    // use e.which
                    if (e.which == 13) {
                        var currentSlide = $('.seamless-slider').slick('slickCurrentSlide');
                        myFunction(currentSlide);
                    }
                });
                $('.seamless-slider').on('init', function() {
                    $('.slick-list').focus();
                });
                $('.seamless-slider').slick({
                    dots: true,
                    centerMode: true,
                    centerPadding: '60px',
                    slidesToShow: 2,
                    variableWidth: true,
                    accessibility: true,
                    responsive: [
                        {
                            breakpoint: 768,
                            settings: {
                                arrows: false,
                                centerMode: true,
                                centerPadding: '40px',
                                slidesToShow: 3
                            }
                        },
                        {
                            breakpoint: 480,
                            settings: {
                                arrows: false,
                                centerMode: true,
                                centerPadding: '40px',
                                slidesToShow: 1
                            }
                        }
                    ]
                });
            });
        </script>

        <script type="text/javascript">
            var restaurants = ["HELLOTacos", "Random Chinese", "Panera", "STUFFS"];
            var sent = [0,0,0,0];
            function myFunction(index) {
                if(sent[index] == 1){
                    alert("A notification for this restaurant has been sent.");
               }else if (confirm("Confirm sending email for " + restaurants[index] + "?") == true) {
                    sent[index] = 1;
                }
            }
        </script>

    </body>
</html>